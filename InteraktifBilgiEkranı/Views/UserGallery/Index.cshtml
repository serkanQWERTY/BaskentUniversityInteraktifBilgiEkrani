@using EntityLayer.Concrete
@model List<User>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@{ 
   string durum = "";
}
<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <div class="col-md-12 my-auto">
        <h2>Kullanıcı Galeri Sayfası</h2>
    </div>
    <div class="card card-body">
        <div class="row d-flex align-items-stretch">
            @foreach (var item in Model)
            {
                <div class="col-12 col-sm-6 col-md-4 d-flex align-items-stretch">
                    <div class="card bg-light">
                        <div class="card-header text-body border-bottom">
                            @item.Role.RoleName
                        </div>
                        <div class="card-body pt-3">
                            <div class="row">
                                <div class="col-7">
                                    <h2 class="lead"><b>@item.UserName @item.UserSurname</b></h2>
                                    <p class="text-muted text-sm">
                                        <b>Fakülte : </b>@item.Faculty.FacultyName <br />
                                        <b>Bölüm : </b>@item.Department.DepartmentName
                                    </p>
                                    <ul class="ml-4 mb-0 fa-ul text-blue">
                                        <li class="small"><span class="fa-li"><i class="fe fe-12 fe-mail"></i></span> Mail: @item.UserMail</li>
                                        <li class="small"><span class="fa-li"><i class="fe fe-12 fe-phone"></i></span> Phone #: @item.UserPhone</li>
                                    </ul>
                                </div>
                                <div class="col-5 text-center">
                                    <img src="@item.UserPath" alt="" class="img-circle img-fluid">
                                </div>
                            </div>
                        </div>
                        <div class="card-footer">
                            <div class="text-right">
                                <p class="text-bold text-sm">
                                    <b> Durum : </b>
                                    @switch (item.UserStatus)
                                    {
                                        case true:
                                            durum = "Aktif";
                                            break;
                                        case false:
                                            durum = "Pasif";
                                            break;
                                    }
                                    @durum

                                </p>
                                <a href="/UserGallery/NewByUser/@item.UserID" class="btn btn-sm btn-primary">
                                    <i class="fas fa-user"></i> Haberleri Görüntüle
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                <br />

            }
        </div>
    </div>
    <br />
    <a href="/User/Index" class="btn btn-primary m-md-2">Geri Git</a>
</body>
</html>

