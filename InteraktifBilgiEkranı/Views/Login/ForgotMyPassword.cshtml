@using EntityLayer.Concrete
@model List<User>
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/light/ımıcıs/style.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css">
    <title>Şifremi Unuttum</title>
</head>
<body>
    @ViewBag.Uyari
    <form action="/Login/ForgotMyPassword" method="post">
        <div class="wrapper">
            <div class="container main">
                <div class="row">
                    <div class="col-md-6 side-image">
                        <img src="images/white.png" alt="">
                    </div>
                    <div class="col-md-6 right">
                        <div class="input-box">
                            <header>Şifre Yenileme</header>
                            <div class="input-field">
                                <input type="email" class="input" name="UserMail" required autocomplete="off">
                                <label for="email">Email</label>
                            </div>
                            <div class="input-field">
                                <input type="submit" class="submit" value="Mail Yolla">
                            </div>
                            <div class="signin">
                                <span>Mail Gönderme işlemi başarılı ise tıklayıp giriş yapabilirsiniz.<a href="/Login/Index"> Buraya Tıklayın.</a></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>


</body>
</html>