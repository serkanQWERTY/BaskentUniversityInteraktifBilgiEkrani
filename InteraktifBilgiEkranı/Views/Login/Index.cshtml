
@{
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/light/ımıcıs/style.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css">
    <title>İnteraktif Bilgi Ekranı</title>
</head>
<body>
    <div class="wrapper">
        <div class="container main">
            <div class="row">
                <div class="col-md-6 side-image">
                    <img src="images/white.png" alt="">
                </div>
                <div class="col-md-6 right">
                    <div class="input-box">
                        <header>INTERAKTİF BİLGİ EKRANI</header>
                        @*@if (Session["UserMail"] == null)
                        {
                            <p class="alert"> @ViewBag.uyarı</p>
                        }*@
                        <header>Giriş Yap</header>
                        @using (Html.BeginForm("Index", "Login", FormMethod.Post))
                        {
                            <div class="input-field">
                                <input type="email" class="input" name="UserMail" required autocomplete="off">
                                <label for="email">Email</label>
                            </div>
                            <div class="input-field">
                                <input type="password" class="input" name="UserPassword" required>
                                <label for="password">Password</label>
                            </div>
                            <div class="input-field">
                                <input type="submit" class="submit" value="Giriş Yap">
                            </div>

                        }
                        <div class="signin">
                            <span>Şifrenizi mi unuttunuz?<a href="/Login/ForgotMyPassword"> Buraya Tıklayın.</a></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
