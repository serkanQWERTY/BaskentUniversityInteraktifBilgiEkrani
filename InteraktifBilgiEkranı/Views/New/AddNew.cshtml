@model EntityLayer.Concrete.New
@{
    ViewBag.Title = "AddNew";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using (Html.BeginForm("AddNew", "New", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="col-md-12" style="width: 450px">
        <div class="card-body">
            <p class="mb-2"><strong>Haber Ekleme Sayfası</strong></p>
            <br />
            <div class="form-group mb-3">
                @Html.Label("Haber Adı")
                @Html.TextBoxFor(x => x.NewName, new { @class = "form-control" })
            </div>

            <div class="form-group mb-3">
                @Html.Label("Haber Tarihi")
                @Html.TextBoxFor(x => x.NewCreationDate, new { @class = "form-control" })
            </div>

            <div class="form-group mb-3">
                @Html.Label("Haber Açıklaması")
                @Html.TextBoxFor(x => x.NewDescription, new { @class = "form-control" })
            </div>

            <div class="form-group mb-3">
                @Html.Label("Haber Durumu")
                <br />
                @Html.RadioButtonFor(x => x.NewStatus, "True")@Html.Label("Aktif")
                <br />
                @Html.RadioButtonFor(x => x.NewStatus, "False")@Html.Label("Pasif")
            </div>

            <div class="form-group mb-3">
                @Html.Label("Gösterilecek Ekran")
                @Html.DropDownListFor(x => x.TvID, (List<SelectListItem>)ViewBag.vlt, new
                { @class = "form-control" })
            </div>

            <div class="form-group mb-3">
                @Html.HiddenFor(model => model.UserID)
            </div>

            <div class="form-group mb-3">
                @Html.LabelFor(x => x.NewPath, htmlAttributes: new { @class = "control-label col-md" })
                <input type="file" name="NewPath" class="form-control" required placeholder="Resim Seçiniz" />
            </div>

            <button class="btn btn-primary">Kaydet</button>
            <a href="/New/Index" class="btn btn-primary m-md-2">Geri Git</a>
        </div>
    </div>
}


