@model EntityLayer.Concrete.New
@{
    ViewBag.Title = "EditNew";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using (Html.BeginForm("EditNew", "New", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="col-md-12" style="width: 450px">
        <div class="card-body">
            <p class="mb-2"><strong>Haber Güncelleme Sayfası</strong></p>
            <br />

            @Html.HiddenFor(model => model.NewID)

            @*<div class="form-group mb-3">
            @Html.Label("Haber ID")
            @Html.TextBoxFor(x => x.NewID, new { @class = "form-control" })
        </div>*@

            <div class="form-group mb-3">
                @Html.Label("Haber Adı")
                @Html.TextBoxFor(x => x.NewName, new { @class = "form-control" })
            </div>

            <div class="form-group mb-3">
                @Html.Label("Haber Yayım Tarih")
                @Html.TextBoxFor(x => x.NewCreationDate, Model.NewCreationDate.ToString("dd.MM.yyyy"), new { @class = "form-control" })
            </div>

            <div class="form-group mb-3">
                @Html.Label("Haber Açıklaması")
                @Html.TextBoxFor(x => x.NewDescription, new { @class = "form-control" })
            </div>

            <div class="form-group mb-3">
                @Html.Label("İçerik Üreticisi")
                @Html.DropDownListFor(x => x.UserID, (List<SelectListItem>)ViewBag.vlu,
                new { @class = "form-control" })
            </div>

            <div class="form-group mb-3">
                @Html.Label("Gösterilecek Ekran")
                @Html.DropDownListFor(x => x.TvID, (List<SelectListItem>)ViewBag.vlt,
                new { @class = "form-control" })
            </div>


            <div class="form-group mb-3">
                @Html.LabelFor(model => model.NewPath, htmlAttributes: new { @class = "control-label col-md" })
                <input type="file" name="NewPath" class="form-control"/>
            </div>

            <button class="btn btn-primary">Güncelle</button>
            <a href="/New/Index" class="btn btn-primary m-md-2">Geri Git</a>
        </div>
    </div>
}

