@model EntityLayer.Concrete.Department

@{
    ViewBag.Title = "AddDepartment";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using (Html.BeginForm("AddDepartment", "Department", FormMethod.Post))
{
    <div class="col-md-12" style="width: 450px">
        <div class="card-body">
            <p class="mb-2"><strong>Bölüm Ekleme Sayfası</strong></p>
            <br />

            <div class="form-group mb-3">
                @Html.Label("Bölüm Adı")
                @Html.TextBoxFor(x => x.DepartmentName, new { @class = "form-control" })
            </div>

            <div class="form-group mb-3">
                @Html.Label("Bölüm Adresi")
                @Html.TextBoxFor(x => x.DepartmentAddress, new { @class = "form-control" })
            </div>

            <div class="form-group mb-3">
                @Html.Label("Bölüm Durumu")
                <br />
                @Html.RadioButtonFor(x => x.DepartmentStatus, "True")@Html.Label("Aktif")
                <br />
                @Html.RadioButtonFor(x => x.DepartmentStatus, "False")@Html.Label("Pasif")
            </div>

            <div class="form-group mb-3">
                @Html.Label("Bölüm Kuruluş Tarihi")
                @Html.TextBoxFor(x => x.DepartmentCreationDate, new { @class = "form-control" })
            </div>

            <div class="form-group mb-3">
                @Html.Label("Bağlı Olduğu Fakülte")
                @Html.DropDownListFor(x => x.FacultyID, (List<SelectListItem>)ViewBag.vlf, new
                { @class = "form-control" })
            </div>
            <button class="btn btn-primary">Kaydet</button>
            <a href="/Department/Index" class="btn btn-primary m-md-2">Geri Git</a>
        </div>
    </div>
}

