@using EntityLayer.Concrete
@model List<New>
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>İnteraktif Bilgi Ekranı</title>
    <link rel="shortcut icon" href="../favicon.ico">
    <link href="~/light/myCss/default.css" rel="stylesheet" />
    <link href="~/light/myCss/component.css" rel="stylesheet" />
    <style>
        .description-container {
            text-align: center;
            font-size: 40px;
            background-color: none;
            color: white;
            position: absolute;
            top: 750px;
            left: 100px;
            color: white;
            overflow-wrap: break-word;
            /* Diğer stil özellikleri  sol alt*/
        }

        .description-container1 {
            text-align: center;
            font-size: 40px;
            background-color: none;
            color: white;
            position: absolute;
            top: 50px;
            left: 100px;
            color: white;
            overflow-wrap: break-word;
            /* Diğer stil özellikleri SOL ÜST */
        }

        .description-container2 {
            text-align: center;
            font-size: 40px;
            background-color: none;
            color: white;
            position: absolute;
            top: 50px;
            right: 100px;
            color: white;
            overflow-wrap: break-word;
            /* Diğer stil özellikleri SAĞ ÜST */
        }

        .description-container3 {
            text-align: center;
            font-size: 40px;
            background-color: none;
            color: white;
            position: absolute;
            top: 750px;
            right: 100px;
            color: white;
            overflow-wrap: break-word;
            /* Diğer stil özellikleri SAĞ ALT */
        }

        .description-container4 {
            text-align: center;
            font-size: 40px;
            background-color: none;
            color: white;
            position: absolute;
            top: 380px;
            left: 775px;
            color: white;
            max-width: 450px; /* Metnin en fazla bu genişlikte görüntülenmesini sağlar */
            overflow-wrap: break-word;
            /* Diğer stil özellikleri  ORTA */
        }

        .carousel-item.active {
            /* Görüntünün parlaklık ayarı */
            filter: brightness(150%);
        }
    </style>
</head>

<body>
    <div class="container">
        <div class="main">
            <ul id="cbp-bislideshow" class="cbp-bislideshow">
                @foreach (var item in Model)
                {
                    if (item.NewStatus == true && item.Tv.TvID == 4)
                    {
                        <li>
                            <img src="@item.NewPath" alt="" />
                            <div class="description-container"><a>@item.NewDescription<i></i></a></div>
                            <div class="description-container1"><a>@item.NewDescription1<i></i></a></div>
                            <div class="description-container2"><a>@item.NewDescription2<i></i></a></div>
                            <div class="description-container3"><a>@item.NewDescription3<i></i></a></div>
                            <div class="description-container4"><a>@item.NewDescription4<i></i></a></div>
                        </li>
                    }
                }
            </ul>
        </div>
    </div>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
    <script src="~/light/myCss/jquery.imagesloaded.min.js"></script>
    <script src="~/light/myCss/modernizr.custom.js"></script>
    <script src="~/light/myCss/cbpBGSlideshow.js"></script>
    <script>
        $(function () {
            cbpBGSlideshow.init();
        });
    </script>
</body>
</html>