@model EntityLayer.Concrete.Tv
@{
    ViewBag.Title = "AddTv";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using (Html.BeginForm("AddTv", "Tv", FormMethod.Post))
{
    <div class="col-md-12" style="width: 450px">
        <div class="card-body">
            <p class="mb-2"><strong>Ekran Ekleme Sayfası</strong></p>
            <br />

            <div class="form-group mb-3">
                @Html.Label("Ekran Açıklaması")
                @Html.TextBoxFor(x => x.TvDescription, new { @class = "form-control" })
            </div>

            <div class="form-group mb-3">
                @Html.Label("Ekran Adresi")
                @Html.TextBoxFor(x => x.TvAddress, new { @class = "form-control" })
            </div>

            <div class="form-group mb-3">
                @Html.Label("Ekran Yaratılış Tarihi")
                @Html.TextBoxFor(x => x.TvCreationDate, new { @class = "form-control" })
            </div>


            <div class="form-group mb-3">
                @Html.Label("Ekran Durumu")
                <br />
                @Html.RadioButtonFor(x => x.TvStatus, "True")@Html.Label("Aktif")
                <br />
                @Html.RadioButtonFor(x => x.TvStatus, "False")@Html.Label("Pasif")
            </div>

            <div class="form-group mb-3">
                @Html.Label("Bağlı Olduğu Bölüm")
                @Html.DropDownListFor(x => x.DepartmentID, (List<SelectListItem>)ViewBag.vld, new
                { @class = "form-control" })
            </div>
            <button class="btn btn-primary">Kaydet</button>
            <a href="/Tv/Index" class="btn btn-primary m-md-2">Geri Git</a>
        </div>
    </div>
}

